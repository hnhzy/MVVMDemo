<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f0f0f0"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.mvvm.demo.widget.TitleBarLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="14dp"
        android:background="@drawable/shape_solid_white_corner10"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_30">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@mipmap/icon_login_bg"
                android:textColor="@color/c_94b93b"
                android:textSize="16sp" />

        </RelativeLayout>


        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="21dp"
            android:background="@null"
            android:drawableLeft="@mipmap/phone"
            android:drawablePadding="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="请输入账号"
            android:paddingLeft="2dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black_back"
            android:textColorHint="@color/c_999999"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="21dp"
            android:layout_marginBottom="10dp"
            android:background="@color/c_999999" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="21dp"
            android:background="@null"
            android:drawableLeft="@mipmap/mima"
            android:drawablePadding="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="请输入登录密码"
            android:inputType="textPassword"
            android:paddingLeft="2dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black_back"
            android:textColorHint="@color/c_999999"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="21dp"
            android:background="@color/c_999999" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="21dp">

            <Button
                android:id="@+id/bt_login"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/dl_bj"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/bt_reset_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt_login"
                android:layout_alignLeft="@id/bt_login"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dp"
                android:background="@color/transparent"
                android:gravity="left|center_vertical"
                android:text="重设密码"
                android:textColor="@color/c_999999"
                android:textSize="14sp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/bt_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt_login"
                android:layout_alignRight="@id/bt_login"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:background="@color/transparent"
                android:gravity="right|center_vertical"
                android:text="注册"
                android:textColor="@color/c_999999"
                android:textSize="14sp"
                android:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>